<div>
    <div class="article-info-secction">
        <div class="article-info-title">
            <h2>Article Information</h2>
        </div>
        <div class="article-info-data">
            <p>
                {% if doi %}
                    DOI: {{ doi }}<br/>
                {% endif %}
                {% if journal_title %}
                    Journal Title: {{ journal_title }}<br/>
                {% endif %}
                {% if doi_link %}
                    DOI Link: {{ doi_link }}<br/>
                {% endif %}
                {% if issue %}
                    Issue: {{ issue }}<br/>
                {% endif %}
                {% if volume %}
                    Volume: {{ volume }}<br/>
                {% endif %}
                {% if date_released %}
                    EPUB Date: {{ date_released }}
                {% endif %}
            </p>
        </div>
    </div>
    <hr class="solid">
    <div class="author-info-section">
        <div class="author-info-title">
            <h2>Author Information</h2>
        </div>
        <div class="author-info-data">
            {% if authors_name %}
                {% for item in authors_name %}
                    <div class="author-name"> {{ item }} </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <hr class="solid">
</div>